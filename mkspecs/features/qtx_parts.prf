TEMPLATE = subdirs

sub_src.subdir = src
sub_src.target = sub-src
SUBDIRS = sub_src

exists($$_PRO_FILE_PWD_/tests/tests.pro) {
    sub_tests.subdir = tests
    sub_tests.target = sub-tests
    sub_tests.depends = sub_src   # The tests may have a run-time only dependency on other parts
    SUBDIRS += sub_tests
}
